  <div md-whiteframe="1" ng-controller="LikedCollectionCtrl" >
    <md-progress-linear  md-mode="indeterminate" ng-hide="!activated"></md-progress-linear>
    <md-content >
      <md-list>
        <md-subheader class="md-primary md-accent">Collection
          <md-tooltip >
            Check out what other are buying/liking at stores.
          </md-tooltip>
        </md-subheader>
        <md-list-item class="full-width" ng-repeat="post in posts"  >
          <md-card class="full-width"  ng-click=openPost(post.globalID)>
              <md-card-title>
                <md-card-title-media>
                  <md-card-avatar>
                     <img class="user_avatar" src={{post.user_image}}></img>
                  </md-card-avatar>
                </md-card-title-media>
                <md-card-title-text>
                  <span class="md-headline"> &nbsp;&nbsp; {{post.username}} liked  {{post.categoryname}} at {{post.storename}}</span>
                  <span class="md-subhead"> &nbsp;&nbsp; {{post.description}}</span>
                  
                </md-card-title-text>
              </md-card-title>
              <div class="wraptocenter">
              <span></span>
                <img class="collection_image" src={{post.image_url}} border="1"/>
              </div>
            </md-card>
        </div>
      </md-virtual-repeat-container>
    </md-content>
</div>
