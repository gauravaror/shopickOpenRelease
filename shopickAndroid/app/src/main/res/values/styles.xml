<resources>

    <!-- Base application theme. -->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat" />
    <style name="FrameworkRoot.Theme.Action" parent="Theme.AppCompat.Light.NoActionBar"/>
    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme" parent="FrameworkRoot.Theme">
        <!-- Only needed for pre-L -->
        <item name="android:editTextBackground">@drawable/edit_text</item>
        <item name="android:editTextStyle">@style/Widget.Shopick.EditText</item>
    </style>

    <style name="Widget.IOSched.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownSelector">?popupItemBackground</item>
        <item name="android:textColor">@color/body_text_1</item>

    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/gray_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_background</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28.5sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Shopick.Base" parent="Theme">
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="actionBarIconColor">#fff</item>
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="spinnerBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="popupItemBackground">?android:selectableItemBackground</item>
        <item name="photoItemForeground">?attr/selectableItemBackground</item>
        <item name="photoItemForegroundBorderless">?attr/selectableItemBackground</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_dark</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_2</item>
        <item name="android:textColorLink">@color/theme_accent_2</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:popupMenuStyle">@style/Widget.IOSched.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Widget.IOSched.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/Widget.Shopick.ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
        <item name="android:actionMenuTextColor">@color/body_text_1</item>


    </style>

    <style name="Widget.Shopick.ListView.DropDown" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:textColor">@color/body_text_1</item>

    </style>

    <style name="AppTheme" parent="Theme.Shopick.Base" />

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ATheme" parent="@android:style/Theme.Light">
        <item name="android:textViewStyle">@style/theme_textview_style</item>
    </style>

    <style name="theme_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/body_text_1</item>
    </style>


    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>


    <style name="feedButtonUnselected">
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="feedButtonSelected">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonshape_selected</item>
    </style>


    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Widget.Shopick.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <!-- Misc -->
    <style name="TabIndicator" >
        <item name="tabSelectedTextColor">@color/theme_primary_dark</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/theme_primary_dark</item>
    </style>
    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/theme_primary_light</item>
    </style>


    <style name="MyCustomFeedTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomFeedTabText</item>
        <item name="tabSelectedTextColor">@color/theme_primary_dark</item>
    </style>
    <style name="MyCustomFeedTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/theme_primary_light</item>
    </style>

    <style name="CategoryTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CategoryTabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CategoryTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Shopick.HeaderBar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:overlapAnchor">true</item>
    </style>
    <style name="Theme.Shopick.Sessions" parent="Theme.IOSched.WithNavDrawer">
        <item name="actionBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="spinnerBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="vpiCirclePageIndicatorStyle">@style/TabStyle</item>
        <item name="android:windowBackground">@color/gray_background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_18dp</item>

    </style>

    <style name="Theme.SideBarShopick"  parent="Theme.Shopick.Sessions">
    </style>

    <style name="Theme.Shopick.Shopick" parent="Theme.Shopick.Sessions">
        <item name="android:windowBackground">@drawable/branded_logo</item>

    </style>


    <style name="TabStyle" parent="Widget.IconPageIndicator">
        <item name="android:textColor">#FF33AA33</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>
    <style name="Theme.IOSched.WithNavDrawer" parent="Theme.Shopick" />
    <style name="Theme.Shopick" parent="Theme.Shopick.Base" />

    <style name="Widget.Shopick.HeaderBar.Spinner" parent="Widget.Shopick.HeaderBar.Spinner.Base" />
    <style name="PresentationSectionHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/theme_primary</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/session_detail_section_separator</item>
    </style>

    <style name="PresentationSectionBottom">
        <item name="android:textSize">@dimen/text_size_medium_plus</item>
        <item name="android:textColor">@color/body_text_2_inverse</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">6</item>
        <item name="android:background">@drawable/session_detail_section_separator</item>
    </style>

    <style name="PresentationSection">
        <item name="android:textSize">@dimen/text_size_medium_plus</item>
        <item name="android:textColor">@color/body_text_2_inverse</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">6</item>

    </style>

    <!-- Explore item text appearances -->
    <style name="ExploreItem.Title" parent="">
        <item name="android:textColor">#fff</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Explore item text appearances -->
    <style name="FeedItem.Title" parent="">
        <item name="android:textColor">@color/theme_accent_1_light</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Explore item text appearances -->
    <style name="CategoryItem.Title" parent="">
        <item name="android:textColor">@color/body_text_1</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Explore item text appearances -->
    <style name="Reedem.Title" parent="">
        <item name="android:textColor">@color/body_text_1_inverse</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_xlittlelarge</item>
        <item name="android:padding">@dimen/element_spacing_normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Explore item text appearances -->
    <style name="Referral.Button" parent="">
        <item name="android:textColor">@color/body_text_1_inverse</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingRight">@dimen/explore_grid_padding</item>
        <item name="android:paddingLeft">@dimen/explore_grid_padding</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="ExploreItem.Title.Hero">
        <item name="android:textColor">@color/white</item> <!-- a bit brighter than body_text_1_inverse to stand out more -->
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ExploreItem.Subtitle" parent="">

        <item name="android:textColor">@color/body_text_2_inverse</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CategoryItem.Subtitle" parent="">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ExploreItem.Subtitle.Hero" />

    <style name="ExploreItem.Snippet" parent="">
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FeedItem.Snippet" parent="">
        <item name="android:textColor">@color/body_text_2_inverse</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Banner.Snippet" parent="">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CategoryItem.Snippet" parent="">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StoreItem.Snippet" parent="">
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textSize">@dimen/text_size_diff_large_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="ExploreItem.Category" parent="">
        <item name="android:textColor">@color/body_text_2_inverse</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>
