<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_feed_layout_screen1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_image_select"
        android:layout_gravity="center"
        android:layout_margin="@dimen/action_button_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="@dimen/element_spacing_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PresentationSectionHeader"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="@dimen/text_size_xlittlelarge"
            android:text="@string/select_image"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="@dimen/element_spacing_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/post_feed_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/upload_camera"/>
        <Button
            android:id="@+id/post_feed_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/upload_gallery"/>
    </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:background="@color/gray_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_description"
                android:layout_gravity="center"
                android:layout_margin="@dimen/action_button_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="@string/offer_spotted_post"
                    android:layout_margin="@dimen/element_spacing_normal"/>
            <ImageView
                android:id="@+id/photo_offer_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/offer_post_example"
                android:layout_margin="@dimen/element_spacing_normal"
                android:visibility="visible" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_1"
                android:layout_gravity="center"
                android:layout_margin="@dimen/action_button_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_margin="@dimen/element_spacing_normal"
                android:text="@string/liked_product_post"
                />

        <ImageView
                android:id="@+id/photo_selfie_liked_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/liked_post_example"
                android:visibility="visible"
                android:layout_margin="@dimen/element_spacing_normal"
                />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>