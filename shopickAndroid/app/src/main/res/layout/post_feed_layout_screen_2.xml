<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/post_feed_layout_screen2"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/photo_feed_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="gone"

            />
        <com.lyft.android.scissors.CropView
            android:id="@+id/crop_feed_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:cropviewViewportHeightRatio="0.75"

            />
    </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/element_spacing_normal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/post_feed_camera_screen_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/upload_camera"/>
        <Button
            android:id="@+id/post_feed_gallery_screen_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/upload_gallery"/>
        <Button
            android:id="@+id/switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_default_padding_material"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/switch_mode"/>

    </LinearLayout>

</RelativeLayout>
